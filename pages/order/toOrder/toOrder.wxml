<view class="container">
    <form bindsubmit="createOrder">

        <view class="address-box">

            <view class="show-address" wx:if="{{address}}" bindtap="selectAddress">

                <van-icon name='location-o' size='40' color='#666666'
                          style='padding:30rpx;padding-top:20rpx;'></van-icon>

                <view style='display: flex;flex-direction: column;'>

                    <view class="name-tel">{{address.name}} {{address.phone}}</view>

                    <view class="addr-text">{{address.detail}}</view>
                </view>

            </view>

            <view class="add-address" wx:else>
                <view class="title" bindtap="addAddress">新增收货地址</view>
            </view>
        </view>

        <view class="fresh-list">

            <view class="list-title">商品列表</view>

            <view class="a-goods"
                  wx:for-items="{{goodsList}}" wx:key="index">

                <view class="img-box">
                    <image src="{{item.pic}}" class="img"/>
                </view>

                <view class="text-box">
                    <view class="arow arow01">
                        <view class="fresh-name">{{item.name}}</view>
                        <view class="fresh-price">¥ {{item.price}}</view>
                    </view>
                    <view class="arow">
                        <view class="fresh-label">{{item.label}}</view>
                        <view class="fresh-num">x {{item.number}}</view>
                    </view>
                </view>
            </view>
        </view>


        <view class="goods-info" wx:if="{{(isNeedLogistics > 0 && yunPrice > 0) || (!hasNoCoupons)}}">
            <view class="row-box" wx:if="{{isNeedLogistics > 0 && yunPrice > 0}}">
                <view class="row-label">商品金额</view>
                <view class="right-text">¥ {{allGoodsPrice}}</view>
            </view>
        </view>

        <view class="goods-info-no" wx:else></view>

        <view class="jiesuan-box">

            <view class="left-price">
                <view class="total">合计：¥ {{allGoodsAndYunPrice - youhuijine}}</view>
            </view>

            <button class="to-pay-btn" formType="submit">提交订单</button>
        </view>
    </form>
</view>