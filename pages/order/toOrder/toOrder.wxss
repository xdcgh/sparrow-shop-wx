.container {
  background-color: #f2f2f2;
}

.address-box {
  width: 100%;
  background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 705rpx center,
                url(https://cdn.it120.cc/images/weappshop/addr-line.png) no-repeat center bottom;
  background-size: 16rpx auto, 750rpx auto;
  background-color: #fff;
  margin: 20rpx 0;
}

.add-address {
  width: 664rpx;
}

.add-address .title {
  font-size: 28rpx;
  color: #000;
  margin-left: 30rpx;
  background: url(https://cdn.it120.cc/images/weappshop/ico-add-addr.png) no-repeat left center;
  background-size: 60rpx auto;
  padding: 40rpx 0 40rpx 90rpx;
}

.show-address {
  width: 664rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
}

.show-address .name-tel {
  font-size: 28rpx;
  color: #000;
  padding: 30rpx 0;
}

.show-address .addr-text {
  font-size: 24rpx;
  color: #888;
  padding-bottom: 34rpx;
  line-height: 36rpx;
}

form {
  width: 100%;
}

.fresh-list {
  width: 100%;
  background-color: #fff;
  margin-bottom: 2rpx;
}

.fresh-list .list-title {
  font-size: 28rpx;
  color: #000;
  padding: 30rpx 0 25rpx 30rpx;
}

.fresh-list  .a-fresh {
  width: 720rpx;
  margin-left: 30rpx;
  display: flex;
  border-top: 1px solid #f4f4f4;
  padding: 16rpx 0;
}

.fresh-list  .a-fresh .img-box {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  margin-right: 20rpx;
  background-color: #d8d8d8;
}

.fresh-list .img-box .img {
  width: 160rpx;
  height: 160rpx;
}

.fresh-list  .a-fresh .text-box {
  width: 510rpx;
  box-sizing: border-box;
  padding-top: 10rpx;
}

.a-fresh .text-box .row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.a-fresh .text-box .row01 {
  margin-bottom: 10rpx;
  font-size: 34rpx;
}

.a-fresh .text-box .row .fresh-name {
  width: 360rpx;
  height: 74rpx;
  color: #000;
  line-height: 1.6;
  overflow: hidden;
}

.a-fresh .text-box .row .fresh-price {
  color: #000;
  align-self: flex-start;
}

.a-fresh .text-box .row .fresh-num {
  font-size: 30rpx;
  color: #999;
}

.account-box {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 500;
  border-top: 1px solid #f4f4f4;
  background-color: #fff;
}

.account-box .to-pay-btn {
  width: 250rpx;
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  background-color: #e64340;
  font-size: 32rpx;
  color: #fff;
  border-radius: 0;
}

.account-box  .left-price {
  display: flex;
  width: 500rpx;
  justify-content: flex-end;
  line-height: 100rpx;
  padding: 0 30rpx 0 0;
  font-size: 28rpx;
  box-sizing: border-box;
}

.account-box .total {
  color: #e64340;
  text-align: right;
}
