.recharge {
    background: #F6F6F6;
    min-height: 100vh;
    max-height: 100vh;
    display: flex;
    flex-direction: column;
}

.recharge .account {
    height: 170rpx;
    background: #fff;
    display: flex;
    align-items: center;
    color: black;
    font-size: 22rpx;
    padding: 0 45rpx;
    margin-bottom: 52rpx;
    justify-content: center;
}

.recharge .account .number {
    font-size: 62rpx;
}

.recharge .nameWrapper {
    color: #f6705a;
    font-size: 38rpx;
    position: relative;
    display: flex;
    justify-content: center;
    margin-bottom: 60rpx;
    width: 100%;
}

.recharge .nameWrapper::after {
    content: "";
    position: absolute;
    bottom: -8rpx;
    left: 50%;
    width: 24%;
    height: 4rpx;
    background: #f6705a;
    transform: translateX(-50%);
}

.recharge .nameWrapper input {
    width: 20%;
    text-align: center;
    font-size: 32rpx;
}

.placeholder {
    text-align: center;
}

button::after {
    border: none;
    margin-bottom: 24rpx;
}

.button-hover {
    opacity: 0.9;
}

.rechargeButton {
    width: 540rpx;
    height: 80rpx;
    border-radius: 16rpx;
    color: white;
    font-size: 26rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
    background: linear-gradient(to right, #ef9b75, #f6705a);
}

.recharge .binding {
    color: #f6705a;
    font-size: 24rpx;
    margin-top: 46rpx;
}